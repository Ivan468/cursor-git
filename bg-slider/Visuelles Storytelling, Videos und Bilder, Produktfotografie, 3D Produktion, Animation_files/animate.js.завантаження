var count = 0;
var interval = setInterval(function() {
   
  var block1 = document.querySelector('#block1');
  var block2 = document.querySelector('#block2');
  var block3 = document.querySelector('#block3');
  var block4 = document.querySelector('#block4');
  if (!block1.classList.contains("d-none")) {
    block1.classList.add("d-none");
    block2.classList.remove("d-none");
  } else if (!block2.classList.contains("d-none")) {
    block2.classList.add("d-none");
    block3.classList.remove("d-none");
  } else if (!block3.classList.contains("d-none")) {
    block3.classList.add("d-none");
    block4.classList.remove("d-none");
  } else if (!block4.classList.contains("d-none")) {
    block4.classList.add("d-none");
    block1.classList.remove("d-none");
  }
  
  count++;
},10000);


document.addEventListener("DOMContentLoaded", function(event){
  document.querySelector('.swiper-container').classList.add('overflow-visible');
  document.querySelector('.swiper-button-next').addEventListener('click', function() {
    console.log('click')
    if(document.querySelector('.swiper-slide.swiper-slide-active #block1')) {
      document.querySelector('.swiper-container').classList.remove('overflow-visible');
    }else {
      document.querySelector('.swiper-container').classList.add('overflow-visible');
    }
  });
  document.querySelector('.swiper-button-prev').addEventListener('click', function() {
    if(document.querySelector('.swiper-slide.swiper-slide-active #block1')) {
      document.querySelector('.swiper-container').classList.remove('overflow-visible');
    }else {
      document.querySelector('.swiper-container').classList.add('overflow-visible');
    }
  });
});
